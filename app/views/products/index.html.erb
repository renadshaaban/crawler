<!DOCTYPE html>
<html>
<head>
<link rel="stylesheet" type="text/css" href="style.css">
</head>
<body>
<section>
  <h1>Fixed Table header</h1>
  <div class="tbl-header">
    <table cellpadding="0" cellspacing="0" border="0">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Price</th>
        </tr>
      </thead>
    </table>
  </div>
  <div class="tbl-content">
    <table cellpadding="0" cellspacing="0" border="0">
      <tbody>
        <% @products.each do |p| %>
        <tr>
          <td> <%= p.id %> </td>
          <td><%= p.name %> </td>
          <td><%= p.price %> $ </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</section>
</body>
</html>